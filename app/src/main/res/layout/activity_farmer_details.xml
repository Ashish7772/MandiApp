<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".FarmerDetails">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/purple_500">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:src="@drawable/crop"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            android:background="@drawable/roundlayout">

            <TextView
                android:id="@+id/fillDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Fill details"
                android:textColor="@color/purple_500"
                android:textSize="25dp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/spinnerCrop5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fillDetails"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="27dp"
                android:layout_marginRight="25dp"
                android:textColor="@color/Gray"
                app:hintTextColor="@color/Gray">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/spinnerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E5E4Ef"
                    android:hint="Enter Crop Name"
                    android:drawableRight="@drawable/name"
                    android:inputType="textPersonName"
                    android:textColor="@color/Gray"
                    android:textColorHint="@color/Gray"
                    android:textSize="20dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/farmerName5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinnerCrop5"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="27dp"
                android:layout_marginRight="25dp"
                android:textColor="@color/Gray"
                app:hintTextColor="@color/Gray">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/farmerName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E5E4Ef"
                    android:hint="FARMERNAME"
                    android:drawableRight="@drawable/name"
                    android:inputType="textPersonName"
                    android:textColor="@color/Gray"
                    android:textColorHint="@color/Gray"
                    android:textSize="20dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phoneNo5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/farmerName5"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="27dp"
                android:layout_marginRight="25dp"
                android:textColor="@color/Gray"
                app:hintTextColor="@color/Gray">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phoneNo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E5E4Ef"
                    android:hint="PHONENO"
                    android:inputType="number"
                    android:textColor="@color/Gray"
                    android:textColorHint="@color/Gray"
                    android:drawableRight="@drawable/phone"
                    android:textSize="20dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/address5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phoneNo5"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="27dp"
                android:layout_marginRight="25dp"
                android:textColor="@color/Gray"
                app:hintTextColor="@color/Gray">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E5E4Ef"
                    android:hint="ADDRESS"
                    android:inputType="text"
                    android:textColor="@color/Gray"
                    android:textColorHint="@color/Gray"
                    android:drawableRight="@drawable/address"
                    android:textSize="20dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Date"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/Gray"
                android:layout_below="@+id/address5"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:backgroundTintMode="add"
                android:drawableRight="@drawable/calender"/>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/date"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="SUBMIT"
                android:textSize="20dp"
                android:padding="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="AAA"
                android:textColor="@color/Gray"
                android:layout_margin="5dp"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>